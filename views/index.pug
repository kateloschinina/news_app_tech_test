extends layout

block content
  div(class="o-grid-container")
    div(class="o-grid-row")
      div(class="demo-container")
        div(class="o-teaser-collection")
          h2(class="o-teaser-collection__heading")= theme
          - for (var i = 0; i < 12; i++)
            div(data-o-grid-colspan="12 S12 M6 XL3")
              div(class="o-teaser o-teaser--small" data-o-component="o-teaser")
                div(class="o-teaser__content")
                  div(class="o-teaser__meta")= data[i].editorial.byline
                  a(href= data[i].location.uri class="o-teaser__tag")
                    h2(class="o-teaser__heading" id="headlines-teaser-title")= data[i].title.title
                  p(class="o-teaser__standfirst")= data[i].summary.excerpt
